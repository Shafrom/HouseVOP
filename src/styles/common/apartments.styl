.apartments
  background #242B33
  padding-top 120px
  &__title
    font-family Playfair Display
    font-style normal
    font-weight bold
    font-size 36px
    color #D4C17F
    margin-bottom 100px
  &__flex
    max-width 1100px
    display flex
    justify-content space-between
    flex-wrap wrap
  &__item
    width 535px
    height 320px
    margin-bottom 30px
    border none
    position relative
    border 2px solid transparent
    transition .5s
  &__item:hover
    border 2px solid red
  &__pic
    width 100%
    height 100%
  &__picCaption
    position absolute
    bottom 50px
    left 50px
    font-family Raleway
    font-style normal
    font-weight normal
    font-size 24px
    color #FFFFFF
